<% provide(:title, @user.name) %>
<div class="row">
  <aside>
    <%= @user.name %>, <%= @user.email %>
  </aside>
  <div class="span8">
    <% if @user.commitments.any? %>
      <h3>Commitments (<%= @user.commitments.count %>)</h3>
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Wager</th>
            <th>Due Date</th>

          </tr>
        </thead>
        <tbody>
          <%= render @commitments %>
        </tbody>
      </table>
      <%= will_paginate @commitments %>
    <% end %>
  </div>
</div>